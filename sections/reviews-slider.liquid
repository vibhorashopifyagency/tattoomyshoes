<div class="review-slider swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="review-card">
              {% if block.settings.review_image %}
                <img src="{{ block.settings.review_image | image_url }}" alt="{{ block.settings.review_author }}" class="review-image">
              {% endif %}
              <p class="review-text">{{ block.settings.review_text }}</p>
              <h4 class="review-author">- {{ block.settings.review_author }}</h4>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
    
    <style>
      .review-slider {
        width: 100%;
        padding: 20px;
      }
      .swiper-slide {
        display: flex;
        justify-content: center;
      }
      .review-card {
        max-width: 400px;
        text-align: center;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
      .review-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 10px;
      }
      .review-text {
        font-size: 16px;
        color: #333;
        margin-bottom: 10px;
      }
      .review-author {
        font-size: 14px;
        color: #666;
      }
    </style>
    
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        new Swiper('.review-slider', {
          loop: true,
          pagination: { el: '.swiper-pagination', clickable: true },
          autoplay: { delay: 3000 },
        });
      });
    </script>

{% schema %}
{
    "name": "Review Slider",
    "settings": [],
    "blocks": [
        {
            "type": "review",
            "name": "Review",
            "settings": [
            {
                "type": "text",
                "id": "review_text",
                "label": "Review Text"
            },
            {
                "type": "text",
                "id": "review_author",
                "label": "Author Name"
            },
            {
                "type": "image_picker",
                "id": "review_image",
                "label": "Author Image"
            }
            ]
        }
    ],
    "presets": [
        {
            "name": "Review Slider"
        }
    ]
}
{% endschema %}    