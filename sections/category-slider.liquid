<style>
    .category-slider {
      padding: 40px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .category-slider__header {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .category-slider__title {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 10px;
      text-transform: uppercase;
    }
    
    .category-slider__subtitle {
      font-size: 16px;
      color: #666;
    }
    
    .category-card {
      position: relative;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s ease;
      padding: 0 10px;
    }
    
    .category-card:hover {
      transform: scale(1.05);
    }
    
    .category-card__image {
      width: 100%;
      height: 240px;
      object-fit: cover;
    }
    
    .category-card__overlay {
      position: absolute;
      bottom: 0;
      left: 5px;
      right: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
      padding: 20px 0;
    }
    
    .category-card__title {
      background: white;
      color: black;
      display: inline-block;
      padding: 8px 16px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
    }
    
    .category-card__link {
      display: block;
      height: 100%;
      text-decoration: none;
    }

    /* Slick Slider Custom Styles */
    .slick-prev,
    .slick-next {
      width: 40px;
      height: 40px;
      z-index: 1;
    }

    .slick-prev {
      left: -20px;
    }

    .slick-next {
      right: -20px;
    }

    .slick-prev:before,
    .slick-next:before {
      font-size: 40px;
      color: #000;
      opacity: 0.75;
    }

    .slick-dots {
      bottom: -40px;
    }

    .slick-dots li button:before {
      font-size: 12px;
      color: #000;
    }

    .slick-slide {
      margin: 0 10px;
    }

    /* Fix for Slick initialization flicker */
    .category-slider-container {
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.5s ease;
      height: 0;
    }
    .category-slider-container.slick-initialized {
      opacity: 1;
      visibility: visible;
      height: auto;
    }
</style>

<div class="category-slider" id="category-slider-{{ section.id }}">
  <div class="category-slider__header">
    <h2 class="category-slider__title">{{ section.settings.title }}</h2>
    <p class="category-slider__subtitle">{{ section.settings.subtitle }}</p>
  </div>
  
  <div class="category-slider-container">
    {% for block in section.blocks %}
      {% if block.type == 'category' %}
        <div class="category-card">
          <a href="{{ block.settings.link }}" class="category-card__link">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 400 | image_tag: class: 'category-card__image', loading: 'lazy' }}
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'category-card__image' }}
            {% endif %}
            <div class="category-card__overlay">
              <span class="category-card__title">{{ block.settings.title }}</span>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var sliderContainer = document.querySelector('#category-slider-{{ section.id }} .category-slider-container');
    
    if (sliderContainer && typeof jQuery !== 'undefined' && typeof jQuery.fn.slick !== 'undefined') {
      jQuery(sliderContainer).slick({
        dots: true,
        infinite: true,
        speed: 500,
        slidesToShow: 4,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 3000,
        arrows: true,
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
        ]
      });
    }
  });
</script>

