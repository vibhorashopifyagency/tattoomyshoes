<style>
    .category-slider {
      padding: 40px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .category-slider__header {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .category-slider__title {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 10px;
      text-transform: uppercase;
    }
    
    .category-slider__subtitle {
      font-size: 16px;
      color: #666;
    }
    
    .category-card {
      position: relative;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s ease;
    }
    
    .category-card:hover {
      transform: scale(1.05);
    }
    
    .category-card__image {
      width: 100%;
      height: 240px;
      object-fit: cover;
    }
    
    .category-card__overlay {
      position: absolute;
      bottom: 0;
      left: -5px;
      right: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
      padding: 20px 0;
    }
    
    .category-card__title {
      background: white;
      color: black;
      display: inline-block;
      padding: 8px 16px;
      border-radius: 4px;
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
    }
    
    .category-card__link {
      display: block;
      height: 100%;
      text-decoration: none;
    }

    /* Tiny Slider Custom Styles */
    .tns-outer {
      position: relative;
    }

    .tns-nav {
      text-align: center;
      margin: 20px 0;
    }

    .tns-nav button {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #ddd;
      border: 0;
      margin: 0 5px;
      padding: 0;
      transition: all 0.3s ease;
    }

    .tns-nav button.tns-nav-active {
      background: #000;
    }

    .tns-controls button {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: white;
      border: 1px solid #ddd;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      z-index: 10;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .tns-controls button:hover {
      background: #f5f5f5;
    }

    .tns-controls button[data-controls="prev"] {
      left: -20px;
    }

    .tns-controls button[data-controls="next"] {
      right: -20px;
    }
</style>

<div class="category-slider" id="category-slider-{{ section.id }}">
  <div class="category-slider__header">
    <h2 class="category-slider__title">{{ section.settings.title }}</h2>
    <p class="category-slider__subtitle">{{ section.settings.subtitle }}</p>
  </div>
  
  <div class="category-slider-container-{{ section.id }}">
    {% for block in section.blocks %}
      {% if block.type == 'category' %}
        <div class="category-card">
          <a href="{{ block.settings.link }}" class="category-card__link">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 400 | image_tag: class: 'category-card__image', loading: 'lazy' }}
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'category-card__image' }}
            {% endif %}
            <div class="category-card__overlay">
              <span class="category-card__title">{{ block.settings.title }}</span>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let slider = tns({
      container: '.category-slider-container',
      items: 1,
      slideBy: 1,
      autoplay: true,
      autoplayTimeout: 4000,
      autoplayButtonOutput: false,
      controls: true,
      nav: true,
      mouseDrag: true,
      loop: true,
      responsive: {
        640: {
          items: 2,
          gutter: 20
        },
        768: {
          items: 3,
          gutter: 20
        },
        1024: {
          items: 4,
          gutter: 20
        }
      }
    });
  });
</script>

